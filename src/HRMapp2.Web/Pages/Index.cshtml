@page
@using Microsoft.AspNetCore.Mvc.Localization
@using HRMapp2.Localization
@using Volo.Abp.Users
@model HRMapp2.Web.Pages.IndexModel
@inject IHtmlLocalizer<HRMapp2Resource> L
@inject ICurrentUser CurrentUser
@section styles {
<abp-style src="/Pages/Index.css" />
}
@section scripts {
<abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">
        <div class="d-inline-block bg-success text-white p-1 h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>HRM Application</strong> is successfully running!</h5>
        </div>
        @*<h1>Welcome to the Application</h1>*@
        @*<p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>*@
        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-auto text-center">
                    <img src="https://scontent.fhan3-3.fna.fbcdn.net/v/t1.15752-9/335011315_758622482490601_727193989960306520_n.jpg?_nc_cat=101&ccb=1-7&_nc_sid=ae9488&_nc_ohc=Ohg0IBbAQFcAX_fSen_&_nc_ht=scontent.fhan3-3.fna&oh=03_AdREY-vAkuxSBpoiCz0exLGjqHbdC3rPFIaMgXTIuNhGwQ&oe=64352BA9" style="max-width: 400px;" class="w-100 mb-5 my-md-3">
                </div>
                <div class="col-md d-flex align-items-center">
                    <div class="pe-0 pe-md-4">
                        <small class="text-uppercase text-muted">GỚI THIỆU</small>
                        <h2 class="mb-4">HRM Application</h2>
