@page
@using HRMapp2.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model HRMapp2.Web.Pages.Departments.Index
@inject IHtmlLocalizer<HRMapp2Resource> L

@section scripts
{
    <abp-script src="/Pages/Employees/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Employees"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewEmployeeButton"
                            text="@L["New Employee"].Value"
                            icon="plus"
                            button-type="Primary"/>
                <div class="dataTable_filters row">
                <div id="EmployeesTable_filter" class="dataTables_filter">
                    <input style="width:50%; margin-left: auto"id="NameSearch"
                           type="search" class="form-control form-control-sm" placeholder="Tìm tên nhân viên" aria-controls="EmployeesTable">
                </div>
                </div>
            </abp-column>
          
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="EmployeesTable"></abp-table>
    </abp-card-body>
</abp-card>