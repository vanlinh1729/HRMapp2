@page
@using HRMapp2.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HRMapp2.Web.Pages.Employees.EditModal


@{
    Layout = null;
}

<form method="post"  asp-page="/Employees/EditModal">
    <abp-modal>
        <abp-modal-header title="Update"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="edit-employee-modal-tabs">
                <abp-tab title="Employee Information" class="mt-3">
                    <div id="employee-information-wrapper" class="mt-3">
                        <abp-input hidden=""  asp-for="Id" label=" "></abp-input>
                         <abp-input asp-for="EditEmployee.EmployeeName" label="Employee Name"/>
                         <abp-select asp-items="@Model.Departments" asp-for="EditEmployee.DepartmentId" label="Department">
                             <option value="" disabled="disabled">Choose Department...</option>
                             </abp-select>
                         <abp-input asp-for="EditEmployee.EmployeeAddress" label="Employee Address"/>
                         <abp-input asp-for="EditEmployee.EmployeeSupervisor" label="Employee Supervisor"/>
                         <abp-input asp-for="EditEmployee.EmployeeSex" label="EmployeeSex"/>
                         <abp-input asp-for="EditEmployee.EmployeeDob" type="Date" label="Employee DOB"/>
                         <abp-input asp-for="EditEmployee.EmployeeWeeklyHours" type="int" label="Employee Weekly Hours"/>
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>