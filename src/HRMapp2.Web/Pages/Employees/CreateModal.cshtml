@page
@using HRMapp2.Departments
@using HRMapp2.Localization
@using HRMapp2.Employees
@using HRMapp2.Projects
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HRMapp2.Web.Pages.Employees.CreateModal
@inject IHtmlLocalizer<HRMapp2Resource> L
@{
    Layout = null;
}

<form method="post" id="CreateEmployeeModal" asp-page="/Employees/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["New Employee"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="create-category-modal-tabs">
                <abp-tab title="@L["Employee Information"].Value" class="mt-3">
                    <div id="category-information-wrapper" class="mt-3">
                        <abp-input asp-for="Employee.EmployeeName" label="@L["Employee Name"].Value"/>
                        <abp-select asp-items="@Model.Departments" asp-for="Employee.DepartmentId" label="@L["Department"].Value">
                            <option value="" disabled="disabled">Chọn phòng ban...</option>
                            </abp-select>
                        <abp-input asp-for="Employee.EmployeeAddress" label="@L["Employee Address"].Value"/>
                        <abp-input asp-for="Employee.EmployeeSupervisor" label="@L["Employee Supervisor"].Value"/>
                        <abp-input asp-for="Employee.EmployeeSex" label="@L["Employee Sex"].Value"/>
                        <abp-input asp-for="Employee.EmployeeDob" type="Date" label="@L["Employee DOB"].Value"/>
                        <abp-input asp-for="Employee.EmployeeWeeklyHours" type="int" label="@L["Employee Weekly Hours"].Value"/>
               
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>