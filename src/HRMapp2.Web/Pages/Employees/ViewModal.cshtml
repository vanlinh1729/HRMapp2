@page
@using HRMapp2.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HRMapp2.Web.Pages.Employees.ViewModal


@{
    Layout = null;
}

<form method="post"  asp-page="/Employees/ViewModal">
    <abp-modal>
        <abp-modal-header  title="Employee Information"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="view-employee-modal-tabs">
                <abp-tab title="Employee Information" class="mt-3">

                      
                       <div class="card-body pt-0">
                                   <table class="table table-bordered">
                                     <tr>
                                       <th width="30%">Employee Name</th>
                                         <td>@Model.EmployeeViewModel.EmployeeName</td>
                                     </tr>
                                     @*<tr>
                                       <th width="30%">Department Name	</th>
                                         <td>@Model.EmployeeViewModel.DepartmentName</td>
                                     </tr>*@
                                     <tr>
                                       <th width="30%">Address</th>
                                         <td>@Model.EmployeeViewModel.EmployeeAddress</td>
                                     </tr>
                                       <tr>
                                           <th width="30%">Supervisor</th>
                                           <td>@Model.EmployeeViewModel.EmployeeSupervisor</td>
                                       </tr>
                                       <tr>
                                           <th width="30%">Gender</th>
                                           <td>@Model.EmployeeViewModel.EmployeeSex</td>
                                       </tr>
                                       <tr>
                                           <th width="30%">DOB</th>
                                           <td>@Model.EmployeeViewModel.EmployeeDob</td>
                                       </tr>
                                       <tr>
                                           <th width="30%">Weekly Hours</th>
                                           <td>@Model.EmployeeViewModel.EmployeeWeeklyHours</td>
                                       </tr>
                                   </table>
                                 </div>
                               </div>
                        
                      
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
    </abp-modal>
</form>