@page
@using HRMapp2.Departments
@using HRMapp2.Localization
@using HRMapp2.Projects
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HRMapp2.Web.Pages.Departments.CreateModal
@inject IHtmlLocalizer<HRMapp2Resource> L

@{
    Layout = null;
}

<form method="post" id="CreateDepartmentModal" asp-page="/Departments/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["New Department"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="create-category-modal-tabs">
                <abp-tab title="@L["Department Information"].Value" class="mt-3">
                    <div id="category-information-wrapper" class="mt-3">
                        <abp-input asp-for="Department.DepartmentName" label="@L["Department Name"].Value"/>
                        <abp-input asp-for="Department.DepartmentManager" label="@L["Department Manager"].Value"/>
                        <abp-input asp-for="Department.ManagerStartDate" type="date" label="@L["Manager Start Date"].Value"/>
                        <abp-input asp-for="Department.DepartmentLocation" label="@L["Department Location"].Value"/>
               
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>