@page
@using HRMapp2.Departments
@using HRMapp2.Localization
@using HRMapp2.Projects
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HRMapp2.Web.Pages.Departments.CreateModal


@{
    Layout = null;
}

<form method="post" id="CreateDepartmentModal" asp-page="/Departments/CreateModal">
    <abp-modal>
        <abp-modal-header title="New Department"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="create-category-modal-tabs">
                <abp-tab title="Department Information" class="mt-3">
                    <div id="category-information-wrapper" class="mt-3">
                        <abp-input asp-for="Department.DepartmentName" label="Department Name"/>
                        <abp-input asp-for="Department.DepartmentManager" label="Department Manager"/>
                        <abp-input asp-for="Department.ManagerStartDate" type="date" label="Manager Start Date"/>
                        <abp-input asp-for="Department.DepartmentLocation" label="Department Location"/>
               
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>