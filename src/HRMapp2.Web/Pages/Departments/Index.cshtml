@page
@using HRMapp2.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model HRMapp2.Web.Pages.Departments.Index
@inject IHtmlLocalizer<HRMapp2Resource> L
@section scripts
{
    <abp-script src="/Pages/Departments/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Department"].Value</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewDepartmentButton"
                            text="@L["New Department"].Value"
                            icon="plus"
                            button-type="Primary"/>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="DepartmentsTable"></abp-table>
    </abp-card-body>
</abp-card>