@page
@using HRMapp2.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HRMapp2.Web.Pages.Departments.EditModal


@{
    Layout = null;
}

<form method="post"  asp-page="/Departments/EditModal">
    <abp-modal>
        <abp-modal-header title="Update"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="edit-department-modal-tabs">
                <abp-tab title="Department Information" class="mt-3">
                    <div id="department-information-wrapper" class="mt-3">
                        <abp-input asp-for="Id"></abp-input>
                        <abp-input asp-for="EditDepartment.DepartmentName" label="Department Name"/>
                        <abp-input asp-for="EditDepartment.DepartmentManager" label="Department Manager"/>
                        <abp-input asp-for="EditDepartment.ManagerStartDate" type="date" label="Manager Start Date"/>
                        <abp-input asp-for="EditDepartment.DepartmentLocation" label="Department Location"/>
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>