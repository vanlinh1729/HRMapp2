@page
@using HRMapp2.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HRMapp2.Web.Pages.Departments.EditModal
@inject IHtmlLocalizer<HRMapp2Resource> L

@{
    Layout = null;
}

<form method="post"  asp-page="/Departments/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="edit-department-modal-tabs">
                <abp-tab title="@L["Department Information"].Value" class="mt-3">
                    <div id="department-information-wrapper" class="mt-3">
                        <abp-input hidden="" asp-for="Id" label=" "></abp-input>
                        <abp-input asp-for="EditDepartment.DepartmentName" label="@L["Department Name"].Value"/>
                        <abp-input asp-for="EditDepartment.DepartmentManager" label="@L["Department Manager"].Value"/>
                        <abp-input asp-for="EditDepartment.ManagerStartDate" type="date" label="@L["Manager Start Date"].Value"/>
                        <abp-input asp-for="EditDepartment.DepartmentLocation" label="@L["Department Location"].Value"/>
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>