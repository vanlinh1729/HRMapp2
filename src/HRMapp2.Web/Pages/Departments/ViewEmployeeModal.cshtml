@page
@using HRMapp2.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HRMapp2.Web.Pages.Departments.ViewModal
@inject IHtmlLocalizer<HRMapp2Resource> L

@{
    Layout = null;
}

    <abp-modal>
        <abp-modal-header  title="@L["Department Information"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="view-department-modal-tabs">
                <abp-tab title="Danh sách nhân viên" class="mt-3">
                    <table>
                        <th>Tên nhân viên</th>
                        @foreach (var e in @Model.Employees)
                        {
                            <p>Alo</p>
                        }
                        <th>Địa chỉ</th>
                        
                        <th>Người giám sát</th>
                        <th>Giới tính</th>
                        <th>Ngày sinh</th>
                        <th>Giờ làm việc hàng tuần</th>
                    </table>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
    </abp-modal>
